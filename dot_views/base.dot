<html>
<head>
  <script src="/bundle.js"></script>
  <link rel="stylesheet" type="text/css" href="/style.css?v=1">
  <script>
    document.styleSheets[0].insertRule('{{=it.navSelector}} { background-color:#3E517A; }', 1);
    {{? it.setToken}}
    BundleEntry.Auth.authenticateUser('{{=it.setToken}}');
    {{?}}
    function createCookie(name,value) {
      var expires = "; expires=" + 'Fri, 31 Dec 9999 23:59:59 GMT';
      document.cookie = name + "=" + value + expires + "; path=/";
    }
    function setLocale(locale) {
      createCookie('locale', locale);
      location.reload();
    }
  </script>
</head>
<body>
    <div id="header">
      <div id="header-inner">
        <span id="language">
          <a onClick="setLocale('en')">English</a>
          <br/>
          <a onClick="setLocale('jp')">&#x65E5;&#x672C;&#x8A9E;</a>
        </span>
        <span id="accountroot">
          Enable JavaScript to register an account and log in.
        </span>
        <a href="/">
          <span id="logo">
            <img src='/images/logocherry.png'></img>Blue Fruit
          </span>
        </a>
        <div class="clearboth"></div>
        <nav>
          <a href="/"><span class="navItem navHome">_(Homepage)</span></a>
          <a href="/list"><span class="navItem navList">Full List</span></a>
          <a href="/submit"><span class="navItem navSubmit">Submit Games</span></a>
        </nav>
      </div>
    </div>
  <div id="wrapper">
    <div id="content">
      {{=it.content}}
    </div>
  </div>
</body>
</html>
